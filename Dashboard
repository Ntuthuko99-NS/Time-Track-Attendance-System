import React, { useState, useEffect } from 'react';
import { ntuthuko } from '@/api/ntuthukoClient';
import { useQuery, useQueryClient } from '@tanstack/react-query';
import { format, startOfWeek, endOfWeek, startOfMonth, endOfMonth, isWithinInterval, parseISO } from 'date-fns';
import { Users, Clock, AlertTriangle, TrendingUp, Calendar } from 'lucide-react';
import StatsCard from '@/components/dashboard/StatsCard';
import ActiveEmployees from '@/components/dashboard/ActiveEmployees';
import RecentActivity from '@/components/dashboard/RecentActivity';
import ClockWidget from '@/components/clock/ClockWidget';
import AlertsPanel from '@/components/alerts/AlertsPanel';

export default function Dashboard() {
  const queryClient = useQueryClient();
  const [currentEmployee, setCurrentEmployee] = useState(null);

  const { data: employees = [] } = useQuery({
    queryKey: ['employees'],
    queryFn: () => base44.entities.Employee.list()
  });

  const { data: timeEntries = [] } = useQuery({
    queryKey: ['timeEntries'],
    queryFn: () => base44.entities.TimeEntry.list('-created_date', 100)
  });

  const { data: currentUser } = useQuery({
    queryKey: ['currentUser'],
    queryFn: () => base44.auth.me()
  });

  useEffect(() => {
    if (currentUser && employees.length > 0) {
      const emp = employees.find(e => e.email === currentUser.email);
      setCurrentEmployee(emp);
    }
  }, [currentUser, employees]);

  const handleClockAction = () => {
    queryClient.invalidateQueries({ queryKey: ['employees'] });
    queryClient.invalidateQueries({ queryKey: ['timeEntries'] });
  };

  // Calculate stats
  const activeCount = employees.filter(e => e.is_clocked_in).length;
  const totalEmployees = employees.filter(e => e.is_active).length;

  const today = new Date();
  const todayStr = format(today, 'yyyy-MM-dd');
  const todayEntries = timeEntries.filter(e => e.date === todayStr);
  
  const totalHoursToday = todayEntries.reduce((sum, e) => sum + (e.total_hours || 0), 0);
  const totalOvertimeToday = todayEntries.reduce((sum, e) => sum + (e.overtime_hours || 0), 0);

  // Weekly stats
  const weekStart = startOfWeek(today, { weekStartsOn: 1 });
  const weekEnd = endOfWeek(today, { weekStartsOn: 1 });
  const weeklyEntries = timeEntries.filter(e => {
    const entryDate = parseISO(e.date);
    return isWithinInterval(entryDate, { start: weekStart, end: weekEnd });
  });
  const weeklyHours = weeklyEntries.reduce((sum, e) => sum + (e.total_hours || 0), 0);

  // Late arrivals (simplified - entries marked as late)
  const lateToday = todayEntries.filter(e => e.is_late).length;

  return (
    <div className="min-h-screen bg-slate-50">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Header */}
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-slate-900">Dashboard</h1>
          <p className="text-slate-500 mt-1">{format(today, 'EEEE, MMMM d, yyyy')}</p>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* Left Column - Stats & Activity */}
          <div className="lg:col-span-2 space-y-6">
            {/* Stats Grid */}
            <div className="grid grid-cols-2 sm:grid-cols-4 gap-4">
              <StatsCard
                title="Active Now"
                value={activeCount}
                subtitle={`of ${totalEmployees} employees`}
                icon={Users}
                iconBg="bg-emerald-50"
                iconColor="text-emerald-600"
              />
              <StatsCard
                title="Hours Today"
                value={totalHoursToday.toFixed(1)}
                subtitle="total worked"
                icon={Clock}
                iconBg="bg-blue-50"
                iconColor="text-blue-600"
              />
              <StatsCard
                title="Weekly Hours"
                value={weeklyHours.toFixed(1)}
                subtitle="this week"
                icon={Calendar}
                iconBg="bg-purple-50"
                iconColor="text-purple-600"
              />
              <StatsCard
                title="Overtime Today"
                value={totalOvertimeToday.toFixed(1)}
                subtitle="extra hours"
                icon={TrendingUp}
                iconBg="bg-amber-50"
                iconColor="text-amber-600"
              />
            </div>

            {/* Active Employees */}
            <ActiveEmployees employees={employees} timeEntries={timeEntries} />

            {/* Recent Activity */}
            <RecentActivity timeEntries={timeEntries} />

            {/* Alerts Panel */}
            <AlertsPanel />
          </div>

          {/* Right Column - Clock Widget */}
          <div className="space-y-6">
            {currentEmployee ? (
              <ClockWidget employee={currentEmployee} onClockAction={handleClockAction} />
            ) : (
              <div className="bg-white rounded-xl shadow-sm p-8 text-center">
                <Clock className="w-12 h-12 text-slate-300 mx-auto mb-4" />
                <p className="text-slate-500">
                  Set up your employee profile to start tracking time
                </p>
              </div>
            )}

            {/* Quick Stats */}
            <div className="bg-white rounded-xl shadow-sm p-6 space-y-4">
              <h3 className="font-semibold text-slate-900">Today's Summary</h3>
              
              <div className="space-y-3">
                <div className="flex items-center justify-between">
                  <span className="text-slate-500">Check-ins</span>
                  <span className="font-medium">{todayEntries.length}</span>
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-slate-500">Late arrivals</span>
                  <span className={`font-medium ${lateToday > 0 ? 'text-amber-600' : 'text-slate-900'}`}>
                    {lateToday}
                  </span>
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-slate-500">Absent</span>
                  <span className="font-medium">{totalEmployees - todayEntries.length}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
