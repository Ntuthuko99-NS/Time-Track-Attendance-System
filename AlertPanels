import React, { useState, useEffect } from 'react';
import { ntuthuko } from '@/api/ntuthukoClient';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { ScrollArea } from "@/components/ui/scroll-area";
import { 
  Bell, Clock, AlertTriangle, UserX, TrendingUp, 
  Check, X, Mail, MessageSquare, RefreshCw 
} from 'lucide-react';
import { formatDistanceToNow } from 'date-fns';
import { toast } from 'sonner';
import { checkShiftAlerts, sendAlertEmail } from './AlertService';

const ALERT_ICONS = {
  shift_reminder: Clock,
  late_arrival: AlertTriangle,
  missed_shift: UserX,
  overtime_warning: TrendingUp,
  forgot_clock_out: Clock
};

const ALERT_COLORS = {
  shift_reminder: 'bg-blue-50 text-blue-700 border-blue-200',
  late_arrival: 'bg-amber-50 text-amber-700 border-amber-200',
  missed_shift: 'bg-red-50 text-red-700 border-red-200',
  overtime_warning: 'bg-purple-50 text-purple-700 border-purple-200',
  forgot_clock_out: 'bg-orange-50 text-orange-700 border-orange-200'
};

export default function AlertsPanel({ showAll = false }) {
  const queryClient = useQueryClient();
  const [checking, setChecking] = useState(false);

  const { data: alerts = [], isLoading } = useQuery({
    queryKey: ['alerts'],
    queryFn: () => base44.entities.Alert.list('-created_date', 50),
    refetchInterval: 60000 // Refetch every minute
  });

  const { data: employees = [] } = useQuery({
    queryKey: ['employees'],
    queryFn: () => base44.entities.Employee.list()
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Alert.update(id, data),
    onSuccess: () => queryClient.invalidateQueries({ queryKey: ['alerts'] })
  });

  const handleCheckAlerts = async () => {
    setChecking(true);
    const newAlerts = await checkShiftAlerts();
    queryClient.invalidateQueries({ queryKey: ['alerts'] });
    if (newAlerts.length > 0) {
      toast.success(`Generated ${newAlerts.length} new alerts`);
    } else {
      toast.info('No new alerts');
    }
    setChecking(false);
  };

  const handleDismiss = (alert) => {
    updateMutation.mutate({ id: alert.id, data: { status: 'dismissed' } });
  };

  const handleMarkRead = (alert) => {
    updateMutation.mutate({ id: alert.id, data: { status: 'read' } });
  };

  const handleSendEmail = async (alert) => {
    const employee = employees.find(e => e.employee_id === alert.employee_id);
    if (employee?.email) {
      const success = await sendAlertEmail(alert, employee.email);
      if (success) {
        toast.success('Email sent successfully');
        queryClient.invalidateQueries({ queryKey: ['alerts'] });
      } else {
        toast.error('Failed to send email');
      }
    }
  };

  const displayAlerts = showAll 
    ? alerts 
    : alerts.filter(a => a.status === 'pending' || a.status === 'sent');

  const pendingCount = alerts.filter(a => a.status === 'pending').length;

  return (
    <Card className="border-0 shadow-sm">
      <CardHeader className="pb-3">
        <div className="flex items-center justify-between">
          <div className="flex items-center gap-2">
            <CardTitle className="text-lg">Alerts</CardTitle>
            {pendingCount > 0 && (
              <Badge className="bg-red-500">{pendingCount}</Badge>
            )}
          </div>
          <Button 
            variant="ghost" 
            size="sm" 
            onClick={handleCheckAlerts}
            disabled={checking}
          >
            <RefreshCw className={`w-4 h-4 mr-1 ${checking ? 'animate-spin' : ''}`} />
            Check
          </Button>
        </div>
      </CardHeader>
      <CardContent className="p-0">
        <ScrollArea className="h-[400px]">
          {isLoading ? (
            <div className="p-4 text-center text-slate-400">Loading alerts...</div>
          ) : displayAlerts.length === 0 ? (
            <div className="p-8 text-center">
              <Bell className="w-12 h-12 text-slate-300 mx-auto mb-3" />
              <p className="text-slate-500">No alerts</p>
            </div>
          ) : (
            <div className="divide-y">
              {displayAlerts.map(alert => {
                const Icon = ALERT_ICONS[alert.type] || Bell;
                const colorClass = ALERT_COLORS[alert.type] || 'bg-slate-50 text-slate-700';
                
                return (
                  <div 
                    key={alert.id} 
                    className={`p-4 hover:bg-slate-50 transition-colors ${
                      alert.status === 'pending' ? 'bg-blue-50/30' : ''
                    }`}
                  >
                    <div className="flex gap-3">
                      <div className={`p-2 rounded-lg ${colorClass} h-fit`}>
                        <Icon className="w-4 h-4" />
                      </div>
                      <div className="flex-1 min-w-0">
                        <div className="flex items-start justify-between gap-2">
                          <div>
                            <p className="text-sm font-medium text-slate-900">
                              {alert.employee_name || 'System Alert'}
                            </p>
                            <p className="text-sm text-slate-600 mt-0.5">
                              {alert.message}
                            </p>
                          </div>
                          <Badge variant="outline" className={colorClass}>
                            {alert.type.replace('_', ' ')}
                          </Badge>
                        </div>
                        
                        <div className="flex items-center justify-between mt-2">
                          <span className="text-xs text-slate-400">
                            {formatDistanceToNow(new Date(alert.created_date), { addSuffix: true })}
                          </span>
                          
                          <div className="flex gap-1">
                            {alert.status === 'pending' && (
                              <>
                                <Button 
                                  variant="ghost" 
                                  size="sm"
                                  onClick={() => handleSendEmail(alert)}
                                  className="h-7 px-2"
                                >
                                  <Mail className="w-3 h-3" />
                                </Button>
                                <Button 
                                  variant="ghost" 
                                  size="sm"
                                  onClick={() => handleMarkRead(alert)}
                                  className="h-7 px-2"
                                >
                                  <Check className="w-3 h-3" />
                                </Button>
                              </>
                            )}
                            <Button 
                              variant="ghost" 
                              size="sm"
                              onClick={() => handleDismiss(alert)}
                              className="h-7 px-2 text-slate-400 hover:text-slate-600"
                            >
                              <X className="w-3 h-3" />
                            </Button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          )}
        </ScrollArea>
      </CardContent>
    </Card>
  );
}
