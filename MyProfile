import React, { useState, useEffect } from 'react';
import { ntuthuko } from '@/api/ntuthukoClient';
import { useQuery, useQueryClient } from '@tanstack/react-query';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Tabs, TabsList, TabsTrigger, TabsContent } from "@/components/ui/tabs";
import { User, Clock, Calendar, TrendingUp, MapPin, Mail, Phone, Building2 } from 'lucide-react';
import { format, startOfWeek, endOfWeek, startOfMonth, endOfMonth, parseISO, isWithinInterval } from 'date-fns';
import ClockWidget from '@/components/clock/ClockWidget';
import TimesheetTable from '@/components/timesheet/TimesheetTable';

export default function MyProfile() {
  const queryClient = useQueryClient();
  const [currentUser, setCurrentUser] = useState(null);
  const [currentEmployee, setCurrentEmployee] = useState(null);

  const { data: employees = [] } = useQuery({
    queryKey: ['employees'],
    queryFn: () => base44.entities.Employee.list()
  });

  const { data: timeEntries = [] } = useQuery({
    queryKey: ['timeEntries'],
    queryFn: () => base44.entities.TimeEntry.list('-created_date', 200)
  });

  const { data: leaveRequests = [] } = useQuery({
    queryKey: ['leaveRequests'],
    queryFn: () => base44.entities.LeaveRequest.list()
  });

  useEffect(() => {
    base44.auth.me().then(setCurrentUser);
  }, []);

  useEffect(() => {
    if (currentUser && employees.length > 0) {
      const emp = employees.find(e => e.email === currentUser.email);
      setCurrentEmployee(emp);
    }
  }, [currentUser, employees]);

  const handleClockAction = () => {
    queryClient.invalidateQueries({ queryKey: ['employees'] });
    queryClient.invalidateQueries({ queryKey: ['timeEntries'] });
  };

  if (!currentEmployee) {
    return (
      <div className="min-h-screen bg-slate-50 flex items-center justify-center">
        <div className="text-center">
          <User className="w-16 h-16 text-slate-300 mx-auto mb-4" />
          <h2 className="text-xl font-semibold text-slate-900">Profile Not Found</h2>
          <p className="text-slate-500 mt-2">Please contact your administrator to set up your employee profile.</p>
        </div>
      </div>
    );
  }

  const myEntries = timeEntries.filter(e => e.employee_id === currentEmployee.employee_id);
  const myLeave = leaveRequests.filter(r => r.employee_id === currentEmployee.employee_id);

  // Calculate stats
  const today = new Date();
  const weekStart = startOfWeek(today, { weekStartsOn: 1 });
  const weekEnd = endOfWeek(today, { weekStartsOn: 1 });
  const monthStart = startOfMonth(today);
  const monthEnd = endOfMonth(today);

  const weeklyEntries = myEntries.filter(e => {
    const entryDate = parseISO(e.date);
    return isWithinInterval(entryDate, { start: weekStart, end: weekEnd });
  });

  const monthlyEntries = myEntries.filter(e => {
    const entryDate = parseISO(e.date);
    return isWithinInterval(entryDate, { start: monthStart, end: monthEnd });
  });

  const weeklyHours = weeklyEntries.reduce((sum, e) => sum + (e.total_hours || 0), 0);
  const monthlyHours = monthlyEntries.reduce((sum, e) => sum + (e.total_hours || 0), 0);
  const monthlyOvertime = monthlyEntries.reduce((sum, e) => sum + (e.overtime_hours || 0), 0);
  const expectedWeeklyHours = (currentEmployee.expected_daily_hours || 8) * 5;

  // Leave balances
  const approvedThisYear = myLeave.filter(r => 
    r.status === 'approved' && 
    new Date(r.start_date).getFullYear() === today.getFullYear()
  );
  const usedAnnual = approvedThisYear.filter(r => r.leave_type === 'annual').reduce((sum, r) => sum + r.total_days, 0);
  const usedSick = approvedThisYear.filter(r => r.leave_type === 'sick').reduce((sum, r) => sum + r.total_days, 0);

  return (
    <div className="min-h-screen bg-slate-50">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Profile Header */}
        <Card className="border-0 shadow-sm mb-8 overflow-hidden">
          <div className="h-24 bg-gradient-to-r from-slate-800 to-slate-900" />
          <CardContent className="relative pt-0 pb-6">
            <div className="flex flex-col sm:flex-row sm:items-end gap-4 -mt-12">
              <Avatar className="h-24 w-24 border-4 border-white shadow-lg">
                <AvatarImage src={currentEmployee.profile_image} />
                <AvatarFallback className="bg-gradient-to-br from-blue-500 to-purple-600 text-white text-2xl">
                  {currentEmployee.full_name?.split(' ').map(n => n[0]).join('').slice(0, 2)}
                </AvatarFallback>
              </Avatar>
              <div className="flex-1 pb-2">
                <div className="flex items-center gap-3">
                  <h1 className="text-2xl font-bold text-slate-900">{currentEmployee.full_name}</h1>
                  {currentEmployee.is_clocked_in && (
                    <Badge className="bg-emerald-500">Working</Badge>
                  )}
                </div>
                <p className="text-slate-500">{currentEmployee.position || currentEmployee.department || 'Employee'}</p>
              </div>
              <Badge variant="outline" className="capitalize">
                {currentEmployee.role}
              </Badge>
            </div>

            <div className="grid grid-cols-2 sm:grid-cols-4 gap-4 mt-6 pt-6 border-t">
              <div className="flex items-center gap-2 text-sm text-slate-600">
                <Mail className="w-4 h-4 text-slate-400" />
                <span className="truncate">{currentEmployee.email}</span>
              </div>
              {currentEmployee.phone && (
                <div className="flex items-center gap-2 text-sm text-slate-600">
                  <Phone className="w-4 h-4 text-slate-400" />
                  {currentEmployee.phone}
                </div>
              )}
              {currentEmployee.department && (
                <div className="flex items-center gap-2 text-sm text-slate-600">
                  <Building2 className="w-4 h-4 text-slate-400" />
                  {currentEmployee.department}
                </div>
              )}
              <div className="flex items-center gap-2 text-sm text-slate-600">
                <Clock className="w-4 h-4 text-slate-400" />
                ID: {currentEmployee.employee_id}
              </div>
            </div>
          </CardContent>
        </Card>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* Left Column - Clock & Stats */}
          <div className="space-y-6">
            <ClockWidget employee={currentEmployee} onClockAction={handleClockAction} />

            {/* Weekly Progress */}
            <Card className="border-0 shadow-sm">
              <CardHeader className="pb-2">
                <CardTitle className="text-lg">Weekly Progress</CardTitle>
              </CardHeader>
              <CardContent>
                <div className="space-y-3">
                  <div className="flex justify-between text-sm">
                    <span className="text-slate-500">Hours worked</span>
                    <span className="font-medium">{weeklyHours.toFixed(1)} / {expectedWeeklyHours}h</span>
                  </div>
                  <div className="h-2 bg-slate-100 rounded-full overflow-hidden">
                    <div 
                      className="h-full bg-blue-500 rounded-full transition-all duration-500"
                      style={{ width: `${Math.min((weeklyHours / expectedWeeklyHours) * 100, 100)}%` }}
                    />
                  </div>
                </div>
              </CardContent>
            </Card>

            {/* Leave Balances */}
            <Card className="border-0 shadow-sm">
              <CardHeader className="pb-2">
                <CardTitle className="text-lg">Leave Balances</CardTitle>
              </CardHeader>
              <CardContent className="space-y-3">
                <div className="flex justify-between">
                  <span className="text-slate-500">Annual Leave</span>
                  <span className="font-medium">
                    {(currentEmployee.annual_leave_balance || 21) - usedAnnual} days
                  </span>
                </div>
                <div className="flex justify-between">
                  <span className="text-slate-500">Sick Leave</span>
                  <span className="font-medium">
                    {(currentEmployee.sick_leave_balance || 30) - usedSick} days
                  </span>
                </div>
                <div className="flex justify-between">
                  <span className="text-slate-500">Pending Requests</span>
                  <span className="font-medium text-amber-600">
                    {myLeave.filter(r => r.status === 'pending').length}
                  </span>
                </div>
              </CardContent>
            </Card>
          </div>

          {/* Right Column - Stats & Timesheet */}
          <div className="lg:col-span-2 space-y-6">
            {/* Stats */}
            <div className="grid grid-cols-2 sm:grid-cols-4 gap-4">
              <Card className="border-0 shadow-sm">
                <CardContent className="p-4">
                  <p className="text-sm text-slate-500">This Week</p>
                  <p className="text-2xl font-semibold">{weeklyHours.toFixed(1)}h</p>
                </CardContent>
              </Card>
              <Card className="border-0 shadow-sm">
                <CardContent className="p-4">
                  <p className="text-sm text-slate-500">This Month</p>
                  <p className="text-2xl font-semibold">{monthlyHours.toFixed(1)}h</p>
                </CardContent>
              </Card>
              <Card className="border-0 shadow-sm">
                <CardContent className="p-4">
                  <p className="text-sm text-slate-500">Overtime</p>
                  <p className="text-2xl font-semibold text-amber-600">{monthlyOvertime.toFixed(1)}h</p>
                </CardContent>
              </Card>
              <Card className="border-0 shadow-sm">
                <CardContent className="p-4">
                  <p className="text-sm text-slate-500">Days Worked</p>
                  <p className="text-2xl font-semibold">{new Set(monthlyEntries.map(e => e.date)).size}</p>
                </CardContent>
              </Card>
            </div>

            {/* Timesheet */}
            <Tabs defaultValue="week">
              <TabsList>
                <TabsTrigger value="week">This Week</TabsTrigger>
                <TabsTrigger value="month">This Month</TabsTrigger>
              </TabsList>
              <TabsContent value="week" className="mt-4">
                <TimesheetTable entries={weeklyEntries} />
              </TabsContent>
              <TabsContent value="month" className="mt-4">
                <TimesheetTable entries={monthlyEntries} />
              </TabsContent>
            </Tabs>
          </div>
        </div>
      </div>
    </div>
  );
}
