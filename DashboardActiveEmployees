import React from 'react';
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Clock, MapPin } from 'lucide-react';
import { format, differenceInMinutes } from 'date-fns';

export default function ActiveEmployees({ employees, timeEntries }) {
  const activeEmployees = employees.filter(e => e.is_clocked_in);
  
  const getActiveSession = (employeeId) => {
    return timeEntries.find(t => t.employee_id === employeeId && t.status === 'active');
  };

  const getSessionDuration = (clockInTime) => {
    const minutes = differenceInMinutes(new Date(), new Date(clockInTime));
    const hours = Math.floor(minutes / 60);
    const mins = minutes % 60;
    return `${hours}h ${mins}m`;
  };

  return (
    <Card className="border-0 shadow-sm">
      <CardHeader className="pb-3">
        <div className="flex items-center justify-between">
          <CardTitle className="text-lg font-semibold">Currently Working</CardTitle>
          <Badge variant="secondary" className="bg-emerald-50 text-emerald-700">
            {activeEmployees.length} Active
          </Badge>
        </div>
      </CardHeader>
      <CardContent className="space-y-3">
        {activeEmployees.length === 0 ? (
          <div className="text-center py-8 text-slate-400">
            <Clock className="w-12 h-12 mx-auto mb-3 opacity-50" />
            <p>No employees currently clocked in</p>
          </div>
        ) : (
          activeEmployees.map((employee) => {
            const session = getActiveSession(employee.employee_id);
            return (
              <div 
                key={employee.id} 
                className="flex items-center justify-between p-3 rounded-xl bg-slate-50 hover:bg-slate-100 transition-colors"
              >
                <div className="flex items-center gap-3">
                  <div className="relative">
                    <Avatar className="h-10 w-10">
                      <AvatarImage src={employee.profile_image} />
                      <AvatarFallback className="bg-gradient-to-br from-blue-500 to-purple-500 text-white text-sm">
                        {employee.full_name?.split(' ').map(n => n[0]).join('').slice(0, 2)}
                      </AvatarFallback>
                    </Avatar>
                    <span className="absolute -bottom-0.5 -right-0.5 w-3.5 h-3.5 bg-emerald-500 border-2 border-white rounded-full" />
                  </div>
                  <div>
                    <p className="font-medium text-slate-900 text-sm">{employee.full_name}</p>
                    <p className="text-xs text-slate-500">{employee.position || employee.department || 'Employee'}</p>
                  </div>
                </div>
                <div className="text-right">
                  {session && (
                    <>
                      <p className="text-sm font-medium text-emerald-600">
                        {getSessionDuration(session.clock_in_time)}
                      </p>
                      <p className="text-xs text-slate-400">
                        Started {format(new Date(session.clock_in_time), 'HH:mm')}
                      </p>
                    </>
                  )}
                </div>
              </div>
            );
          })
        )}
      </CardContent>
    </Card>
  );
}
